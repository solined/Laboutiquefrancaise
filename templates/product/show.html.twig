{% extends 'base.html.twig' %}

{% block title %}{{product.name}} - La boutique Française!{% endblock %}

{% block content %}
{# {{ dump(product) }} #}
    <div class="row">
        <div class="col-md-5">
            <img src="/uploads/{{ product.illustration }}" alt="{{product.name}}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">{# centre la partie droite au milieu de la partie gauche #}
            <h3>{{product.name}}</h3>
            <p>{{ product.subtitle }}</p>
            {# <p>{{ (product.prix / 100) | number_format(2, ',', '.') }}</p> #}
            <span class="product-page-price">{{ (product.prix / 100) | number_format(2, ',', '.') }}</span> 
            <hr>
            <p>
                {{product.description}}
            </p>
            <a href="{{ path('add_to_cart', { 'id' : product.id }) }}" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>

    <hr>
    <h3>Nos meilleures ventes</h3>
    <p>Découvrez les articles les plus vendus.</p>
    <div class="row align-center">
        {% for product in products %} 
            <div class="col-md-3">
                {% include 'product/single_product.html.twig' %}
            </div>
        {% endfor %}
    </div>

{% endblock %}
